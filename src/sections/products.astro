---
import Button from "../components/Button.astro";
import Title from "../components/shared/Title.astro";
import Paragraph from "../components/shared/Paragraph.astro";
import Container from "../components/shared/Container.astro";
import ProductCard from "../components/cards/ProductCard.astro";
import { products } from "../utils/data.js";

type ProductsProps = {
  title: string;
  description: string;
  icon: string;
};
---

<section id="products">
  <Container className="space-y-10 md:sapce-y-12">
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <Title id="products">
        Nossos
        <span class="text-secondary dark:text-secondary-dark">produtos</span>!
      </Title>
      <Paragraph>
        Lorem ipsum dolor sit amet consectetur adipisicing elit.
      </Paragraph>
    </div>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        products.map((product: ProductsProps) => {
          return (
            <ProductCard
              title={product.title}
              description={product.description}
              icon={product.icon}
            />
          );
        })
      }
    </div>
  </Container>
</section>



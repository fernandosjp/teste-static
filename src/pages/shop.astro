---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Title from "../components/shared/Title.astro";
import ButtonLink from "../components/shared/ButtonLink.astro";
---

<Layout title="Compre">
  <main class="mt-16 xl:mt-24 px-8 md:px-12 xl:px-28 flex flex-col gap-16 xl: xl:items-center">
    <div class="flex flex-col gap-8 items-center xl:items-start text-center xl:text-left">
      <Title>
        Compre nossos produtos
        <span class="text-heading1 dark:text-heading1-inverse">Today</span>!
      </Title>
      <p class="md:text-xl">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore aliqua.
      </p>
      <ButtonLink text="Comprar" href="/shop" className="flex justify-center w-full sm:w-max" variant="primary"/>
    </div>
  </main>
</Layout>
